<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_arrow"
            android:backgroundTint="#333355"
            android:foreground="@drawable/btn_focus_foreground"
            android:textColor="#FFFFFF"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_title"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- IA crÃ©dit -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ia_credit"
            android:textColor="#555577"
            android:textSize="11sp"
            android:layout_marginBottom="20dp"/>

        <!-- Texte communautaire -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_community_text"
            android:textColor="#CCCCEE"
            android:textSize="13sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:background="#22FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="12dp"/>

        <!-- Bouton soutenir (juste sous le texte communautaire) -->
        <Button
            android:id="@+id/btnSupportAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support_about_button"
            android:backgroundTint="#FF6F00"
            android:foreground="@drawable/btn_focus_foreground"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAACC"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:text="Version 1.0"/>

        <Button
            android:id="@+id/btnCheckForUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_for_updates"
            android:backgroundTint="#0066AA"
            android:foreground="@drawable/btn_focus_foreground"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:focusable="true"/>

        <!-- Licence GPL -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gpl_license_text"
            android:textColor="#81C784"
            android:textSize="12sp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:background="#22388E3C"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:autoLink="web"
            android:linksClickable="true"/>

        <!-- Downloader code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#22FFFFFF"
            android:padding="14dp"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/downloader_code_label"
                android:textColor="#AAAACC"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/downloader_code_value"
                android:textColor="#FFD700"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.15"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
