<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="16dp">

    <!-- Top bar: Back + Title -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:descendantFocusability="afterDescendants">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_arrow"
            android:textSize="18sp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:backgroundTint="#333355"
            android:foreground="@drawable/btn_focus_foreground"
            android:textColor="#FFFFFF"
            android:layout_gravity="start|center_vertical"
            android:focusable="true"
            android:nextFocusDown="@id/btnStartStop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dns_speedtest_title"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Start/Stop button + current test progress (same line) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dns_speedtest_button"
            android:backgroundTint="#4CAF50"
            android:foreground="@drawable/btn_focus_foreground"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:focusable="true"
            android:nextFocusUp="@id/btnBack"
            android:nextFocusDown="@id/scrollProviders"
            android:nextFocusRight="@id/scrollRanking"/>

        <TextView
            android:id="@+id/tvCurrentTest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:maxLines="3"
            android:text="DNS Speedtest"
            android:background="#121212"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Bottom: Providers (left) | Ranking (right) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- LEFT: Providers with expandable results -->
        <ScrollView
            android:id="@+id/scrollProviders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="#0D0D1A"
            android:padding="6dp"
            android:fillViewport="true"
            android:focusable="false"
            android:descendantFocusability="afterDescendants"
            android:nextFocusUp="@id/btnStartStop"
            android:nextFocusRight="@id/scrollRanking">

            <LinearLayout
                android:id="@+id/layoutProviders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

        <!-- RIGHT: Ranking -->
        <ScrollView
            android:id="@+id/scrollRanking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="#1A1A0D"
            android:foreground="@drawable/btn_focus_foreground"
            android:padding="6dp"
            android:fillViewport="true"
            android:focusable="true"
            android:descendantFocusability="blocksDescendants"
            android:nextFocusUp="@id/btnStartStop"
            android:nextFocusLeft="@id/scrollProviders">

            <TextView
                android:id="@+id/tvRanking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="1dp"
                android:focusable="false"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
