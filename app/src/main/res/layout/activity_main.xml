<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- En-tete -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/focusable_item_background"
            android:foreground="@drawable/btn_focus_foreground"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minWidth="56dp"
            android:focusable="true"
            android:nextFocusRight="@id/btnSettings"
            android:nextFocusDown="@id/layoutSelectDns" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnLanguage"
            android:layout_toStartOf="@id/btnSettings"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/dns_switcher"
            android:textSize="16sp"
            android:textColor="#D4A017"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/focusable_item_background"
            android:foreground="@drawable/btn_focus_foreground"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:focusable="true"
            android:nextFocusLeft="@id/btnLanguage"
            android:nextFocusDown="@id/layoutSelectDns"
            android:contentDescription="@string/settings_content_description" />
    </RelativeLayout>

    <!-- 1| Fournisseur DNS -->
    <TextView
        android:id="@+id/tvDnsProviderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dns_provider_label"
        android:textSize="13sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:id="@+id/layoutSelectDns"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/focusable_item_background"
        android:foreground="@drawable/btn_focus_foreground"
        android:focusable="true"
        android:clickable="true"
        android:nextFocusUp="@id/btnLanguage"
        android:nextFocusDown="@id/btnToggle">

        <ImageView
            android:id="@+id/ivSelectedDnsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="DNS icon" />

        <TextView
            android:id="@+id/tvSelectDns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dns_select_button"
            android:textSize="13sp"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- 2| Activation -->
    <TextView
        android:id="@+id/tvActivationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activation_label"
        android:textSize="13sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="3dp" />

    <Button
        android:id="@+id/btnToggle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/activate"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_activate_background"
        android:foreground="@drawable/btn_focus_foreground"
        android:focusable="true"
        android:layout_marginBottom="4dp"
        android:nextFocusUp="@id/layoutSelectDns"
        android:nextFocusDown="@id/swToolsToggle" />

    <!-- 3| Outils de test + toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/tvToolsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tools_section_label"
            android:textSize="13sp"
            android:textColor="#CCCCCC" />

        <Switch
            android:id="@+id/swToolsToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:background="@drawable/focusable_item_background"
            android:nextFocusUp="@id/btnToggle"
            android:nextFocusDown="@id/btnDomainTester" />
    </LinearLayout>

    <!-- Module outils -->
    <LinearLayout
        android:id="@+id/layoutToolsPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#12FFFFFF"
        android:padding="8dp">

        <!-- Boutons Testeur domaine + Générer rapport côte à côte -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnDomainTester"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/quick_dns_test_button"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0D47A1"
                android:foreground="@drawable/btn_focus_foreground"
                android:focusable="true"
                android:textAllCaps="false"
                android:nextFocusUp="@id/btnToggle"
                android:nextFocusRight="@id/btnGenerateReport"
                android:nextFocusDown="@id/btnSpeedtest" />

            <Button
                android:id="@+id/btnGenerateReport"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/generate_report_button"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1B5E20"
                android:foreground="@drawable/btn_focus_foreground"
                android:focusable="true"
                android:textAllCaps="false"
                android:nextFocusUp="@id/btnToggle"
                android:nextFocusLeft="@id/btnDomainTester"
                android:nextFocusDown="@id/btnShareReport" />
        </LinearLayout>

        <!-- Boutons Speedtest + Partager cote a cote -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnSpeedtest"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/internet_speedtest_advanced"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6F00"
                android:foreground="@drawable/btn_focus_foreground"
                android:focusable="true"
                android:textAllCaps="false"
                android:nextFocusUp="@id/btnDomainTester"
                android:nextFocusRight="@id/btnShareReport"
                android:nextFocusDown="@id/scrollStatus" />

            <Button
                android:id="@+id/btnShareReport"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/share_report_button"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#B71C1C"
                android:foreground="@drawable/btn_focus_foreground"
                android:focusable="true"
                android:textAllCaps="false"
                android:nextFocusUp="@id/btnGenerateReport"
                android:nextFocusLeft="@id/btnSpeedtest"
                android:nextFocusDown="@id/scrollReport" />
        </LinearLayout>

        <!-- Zone résultats split en 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <!-- Left: Status info (DNS actif, IP, etc.) -->
            <ScrollView
                android:id="@+id/scrollStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:fillViewport="true"
                android:background="@drawable/focusable_item_background"
                android:focusable="true"
                android:nextFocusUp="@id/btnSpeedtest"
                android:nextFocusRight="@id/scrollReport">
                <TextView
                    android:id="@+id/tvStatusInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_active_dns"
                    android:textSize="11sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="2dp"
                    android:padding="6dp" />
            </ScrollView>

            <!-- Right: Report -->
            <ScrollView
                android:id="@+id/scrollReport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:fillViewport="true"
                android:background="@drawable/focusable_item_background"
                android:focusable="true"
                android:nextFocusUp="@id/btnShareReport"
                android:nextFocusLeft="@id/scrollStatus">
                <TextView
                    android:id="@+id/tvReportContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_report_yet"
                    android:textSize="11sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="2dp"
                    android:padding="6dp" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
