<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- En-tete -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/btnLanguage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/focusable_item_background"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:minWidth="48dp"
            android:focusable="true"
            android:nextFocusRight="@id/btnSettings"
            android:nextFocusDown="@id/layoutSelectDns" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnLanguage"
            android:layout_toStartOf="@id/btnSettings"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/dns_switcher"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/focusable_item_background"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:focusable="true"
            android:nextFocusLeft="@id/btnLanguage"
            android:nextFocusDown="@id/layoutSelectDns"
            android:contentDescription="@string/settings_content_description" />
    </RelativeLayout>

    <!-- 1| Fournisseur DNS -->
    <TextView
        android:id="@+id/tvDnsProviderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dns_provider_label"
        android:textSize="13sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="3dp" />

    <LinearLayout
        android:id="@+id/layoutSelectDns"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/focusable_item_background"
        android:focusable="true"
        android:clickable="true"
        android:nextFocusUp="@id/btnLanguage"
        android:nextFocusDown="@id/btnToggle">

        <ImageView
            android:id="@+id/ivSelectedDnsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:contentDescription="DNS icon" />

        <TextView
            android:id="@+id/tvSelectDns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dns_select_button"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- 2| Activation -->
    <TextView
        android:id="@+id/tvActivationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activation_label"
        android:textSize="13sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="3dp" />

    <Button
        android:id="@+id/btnToggle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/activate"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_activate_background"
        android:focusable="true"
        android:layout_marginBottom="4dp"
        android:nextFocusUp="@id/layoutSelectDns"
        android:nextFocusDown="@id/btnGenerateReport" />

    <!-- 3| Outils de test -->
    <TextView
        android:id="@+id/tvToolsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tools_section_label"
        android:textSize="13sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="3dp" />

    <!-- Module outils -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#12FFFFFF"
        android:padding="8dp">

        <!-- DNS actif (bandeau statut) -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_active_dns"
            android:textSize="13sp"
            android:textColor="#FF5555"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="6dp"
            android:background="@drawable/focusable_item_background"
            android:focusable="true"
            android:nextFocusUp="@id/btnToggle"
            android:nextFocusDown="@id/btnGenerateReport" />

        <!-- Bouton test rapide DNS -->
        <Button
            android:id="@+id/btnQuickDnsTest"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="4dp"
            android:text="@string/quick_dns_test_button"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D47A1"
            android:foreground="@drawable/btn_focus_foreground"
            android:focusable="true"
            android:textAllCaps="false"
            android:nextFocusUp="@id/tvStatus"
            android:nextFocusDown="@id/btnGenerateReport" />

        <!-- Boutons Generer / Partager cote a cote -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnGenerateReport"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/generate_report_button"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1B5E20"
                android:foreground="@drawable/btn_focus_foreground"
                android:focusable="true"
                android:textAllCaps="false"
                android:nextFocusUp="@id/btnQuickDnsTest"
                android:nextFocusRight="@id/btnShareReport"
                android:nextFocusDown="@id/scrollReport" />

            <Button
                android:id="@+id/btnShareReport"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/share_report_button"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#B71C1C"
                android:foreground="@drawable/btn_focus_foreground"
                android:focusable="true"
                android:textAllCaps="false"
                android:nextFocusUp="@id/btnQuickDnsTest"
                android:nextFocusLeft="@id/btnGenerateReport"
                android:nextFocusDown="@id/scrollReport" />
        </LinearLayout>

        <!-- Zone resultats (scrollable) -->
        <ScrollView
            android:id="@+id/scrollReport"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:fillViewport="true"
            android:background="#121212"
            android:foreground="@drawable/btn_focus_foreground"
            android:focusable="true"
            android:nextFocusUp="@id/btnGenerateReport">

            <TextView
                android:id="@+id/tvReportContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_report_yet"
                android:textSize="11sp"
                android:textColor="#AAAAAA"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp"
                android:padding="6dp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
