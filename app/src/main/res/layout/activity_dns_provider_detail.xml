<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:padding="16dp">

    <!-- Header: Back + Provider name -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:descendantFocusability="afterDescendants">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/back"
            android:textSize="20sp"
            android:background="@drawable/focusable_item_background"
            android:textColor="#FFFFFF"
            android:focusable="true"
            android:nextFocusDown="@id/rvProfiles"
            android:nextFocusRight="@id/rvProfiles"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivProviderIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                android:contentDescription="Provider icon"/>

            <TextView
                android:id="@+id/tvProviderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Ratings bar -->
    <LinearLayout
        android:id="@+id/layoutRatings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tvSpeedStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFD700"
            android:textSize="13sp"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/tvPrivacyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tvPrivacyStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFD700"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- Add profile button (NextDNS only) -->
    <Button
        android:id="@+id/btnAddProfile"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="@string/add_nextdns_profile"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        android:foreground="@drawable/btn_focus_foreground"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:focusable="true"
        android:visibility="gone"
        android:nextFocusUp="@id/btnBack"
        android:nextFocusDown="@id/rvProfiles"/>

    <!-- Profile list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProfiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:descendantFocusability="afterDescendants"/>

</LinearLayout>
