<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1E1E1E"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_language_title"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnFrancais"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/lang_francais"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/focusable_item_background"
        android:layout_marginBottom="16dp"
        android:focusable="true"
        android:nextFocusDown="@id/btnEnglish" />

    <Button
        android:id="@+id/btnEnglish"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/lang_english"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/focusable_item_background"
        android:focusable="true"
        android:nextFocusUp="@id/btnFrancais" />

</LinearLayout>
