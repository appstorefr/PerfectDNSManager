<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/howto_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Statut ADB -->
        <TextView
            android:id="@+id/tvAdbStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="#22FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Bouton ouvrir options développeur -->
        <Button
            android:id="@+id/btnOpenDevOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/howto_open_dev_options"
            android:background="@drawable/focusable_item_background"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="32dp"
            android:focusable="true" />

        <!-- Étape 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/howto_step1_title"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#00AAFF"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:text="@string/howto_step1_desc"/>

        <!-- Étape 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/howto_step2_title"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#00AAFF"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:text="@string/howto_step2_desc"/>

        <!-- Étape 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/howto_step3_title"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#00AAFF"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:text="@string/howto_step3_desc"/>

        <!-- Note box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#22FF8800"
            android:padding="14dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/howto_note_tv_title"
                android:textColor="#FFAA44"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:text="@string/howto_note_tv_desc"/>
        </LinearLayout>

        <!-- Note compatibilité Android 8+ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#22FF0000"
            android:padding="14dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/howto_compat_title"
                android:textColor="#FF8A80"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:text="@string/howto_compat_desc"/>
        </LinearLayout>

        <!-- Note Android 11+ (ADB sans fil) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#22FFAB00"
            android:padding="14dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/howto_android11_title"
                android:textColor="#FFD54F"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:text="@string/howto_android11_desc"/>
        </LinearLayout>

        <!-- Note Firestick -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#22FF4444"
            android:padding="14dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/howto_firestick_title"
                android:textColor="#FF6644"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:text="@string/howto_firestick_desc"/>
        </LinearLayout>

        <!-- Recommandation VPN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2200CC88"
            android:padding="14dp"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/howto_recommendation_title"
                android:textColor="#00CC88"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:text="@string/howto_recommendation_desc"/>
        </LinearLayout>

        <!-- Bouton retour -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_arrow"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:focusable="true"/>

    </LinearLayout>
</ScrollView>
